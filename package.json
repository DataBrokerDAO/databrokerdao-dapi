{
  "name": "@settlemint/databrokerdao-dapi",
  "version": "0.0.0-development",
  "description": "The smart contracts and dAPI for a token curated marketplace project",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=8.7.0"
  },
  "scripts": {
    "dev-test": "mint compile --all && mint migrate --reset && mint test",
    "dev": "truffle compile --all",
    "test": "truffle test",
    "lint": "npm run solium -- --dir contracts --fix",
    "watch": "nodemon --watch . --exec npm run test",
    "semantic-release": "semantic-release",
    "solium": "solium"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/databrokerdao/databrokerdao-dapi.git"
  },
  "keywords": [
    "mint",
    "boilerplate"
  ],
  "author": "Silke Van den Broeck <silke@settlemint.com>, Roderik van der Veer <roderik@settlemint.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/databrokerdao/databrokerdao-dapi/issues"
  },
  "homepage": "https://github.com/databrokerdao/databrokerdao-dapi#readme",
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "ethereumjs-testrpc-sc": "^6.1.6",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2",
    "semantic-release": "^15.9.12",
    "solidity-coverage": "^0.5.11",
    "solium": "^1.1.8"
  },
  "dependencies": {
    "@settlemint/lib-crypto": "^4.7.0",
    "@settlemint/solidity-mint": "1.18.1",
    "axios": "^0.18.0",
    "bip39": "^2.5.0",
    "bn.js": "4.11.8",
    "buffer": "^5.2.1",
    "debug": "^3.1.0",
    "ethereumjs-abi": "0.6.5",
    "ethereumjs-wallet": "^0.6.2",
    "ethjs": "0.4.0",
    "ethjs-provider-http": "0.1.6",
    "ethjs-query": "0.3.8",
    "ethjs-rpc": "0.2.0",
    "ethjs-util": "0.1.6",
    "lodash": "^4.17.10",
    "node-fetch": "^2.2.0",
    "openzeppelin-solidity": "^1.12.0",
    "solc": "^0.4.24",
    "truffle-hdwallet-provider": "^1.0.0-web3one.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:node/recommended",
      "plugin:promise/recommended",
      "eslint:recommended"
    ],
    "plugins": [
      "prettier",
      "node",
      "promise"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-console": 0,
      "node/exports-style": [
        "error",
        "module.exports"
      ]
    },
    "globals": {
      "artifacts": true,
      "web3": true,
      "assert": true,
      "contract": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "jest": true
    }
  }
}
